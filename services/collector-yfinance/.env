# RabbitMQ host (service name from docker-compose)
RABBITMQ_HOST=rabbitmq

# Comma-separated list of ticker symbols to collect
TICKERS=AAPL,MSFT,GOOGL

# Fetch interval (seconds) for the continuous loop
FETCH_INTERVAL_SECONDS=120

# Delay between individual ticker requests (seconds) - helps with rate limiting
TICKER_DELAY_SECONDS=3.0

# Delay when all tickers fail consecutively (seconds)
RETRY_DELAY_SECONDS=600

# Max connection attempts (0 = unlimited, set to 6 for testing)
MAX_CONNECTION_ATTEMPTS=6

# Log level for debugging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
